@model IEnumerable<DAL.Entity.Lesson>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="card">

        <div class="card-header">
            <a asp-action="Create" asp-controller="Lesson" class="btn btn-success float-right">Yeni Ders Oluştur</a>
        </div>

        <div class="card-body">
            <table id="lessontable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Ders Adı</th>
                        <th>Kategori</th>
                        <th>Haftada Kaç Saat</th>
                        <th>Birinci Sınav Ağırlığı</th>
                        <th>Ara Sınav Ağırlığı</th>
                        <th>Son Sınav Ağırlığı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lesson in Model)
                    {
                        <tr>
                            <td>@lesson.LessonName</td>
                            <td>@lesson.LessonCategory</td>
                            <td>@lesson.WeeklyLessonHour</td>
                            <td>@lesson.MidTermNoteWeight1</td>
                            <td>@lesson.MidTermNoteWeight2</td>
                            <td>@lesson.FinalExamNoteWeight</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Lesson" asp-route-id="@lesson.ID" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-controller="Lesson" asp-route-id="@lesson.ID" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#lessontable').DataTable();
        });
    </script>
}

