@model DAL.Entity.OneToMany.Branch
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="card-header">
        <h2>Branş Sil</h2>
    </div>
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Branch" method="post">
            <p>
                @Model.BranchName isimli branşı silmek isteğinizden emin misiniz?
            </p>
            <button class="btn btn-danger">Evet</button>
            <a asp-action="Index" asp-controller="Branch" class="btn">İptal</a>
        </form>
    </div>
</div>

