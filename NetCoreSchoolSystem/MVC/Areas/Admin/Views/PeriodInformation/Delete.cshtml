@model DAL.Entity.PeriodInformation
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content-wrapper">
        <div class="card-header">
            <h2>Dönem Sil</h2>
        </div>
        <div class="card-body">
            <form asp-action="Delete" asp-controller="PeriodInformation" method="post">
                <p>
                    @Model.LessonYear dönemine ait @Model.PeriodName 'i silmek isteğinizden emin misiniz?
                </p>
                <button class="btn btn-danger">Evet</button>
                <a asp-action="Index" asp-controller="PeriodInformation" class="btn">İptal</a>
            </form>
        </div>
    </div>

